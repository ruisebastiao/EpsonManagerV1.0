<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/progressWaitMan"
        android:layout_gravity="center"
        android:visibility="gone" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="left|center_vertical"
        android:longClickable="false"
        android:columnCount="10"
        android:rowCount="10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Estado:"
            android:id="@+id/textView"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold"
            android:textIsSelectable="false"
            android:layout_row="0" />

        <TextView
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textRbState"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:hint="Sem ligação ao robot"
            android:layout_columnSpan="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Robot:"
            android:id="@+id/textView2"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textMsgRb"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:layout_row="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Visão:"
            android:id="@+id/textView3"
            android:layout_row="3"
            android:layout_column="0"
            android:textStyle="bold"
            android:layout_margin="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Alimentação:"
            android:id="@+id/textView4"
            android:layout_row="4"
            android:layout_column="0"
            android:textStyle="bold"
            android:layout_margin="10dp" />

        <TextView
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textMsgVis"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:layout_row="3" />

        <TextView
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textMsgFeed"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:layout_row="4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/textView5"
            android:layout_row="5"
            android:layout_column="2" />

        <ToggleButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="New ToggleButton"
            android:id="@+id/btmanmode"
            android:layout_gravity="left"
            android:textOff="@string/waitman"
            android:textSize="20dp"
            android:checked="false"
            android:textOn="@string/waitmanok"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_columnSpan="2" />
    </GridLayout>

</LinearLayout>