<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/progressWaitJogSettings"
        android:layout_gravity="center"
        android:visibility="gone" />

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal|top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Pontos Disponiveis:"
            android:id="@+id/textView"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center_vertical"
            android:textSize="20dp" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerPontos"
            android:layout_row="0"
            android:layout_column="1" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Ir para posição"
            android:id="@+id/bt_jumptopoint"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="2" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Salvar ponto na posição actual"
            android:id="@+id/btsavept"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_marginTop="20dp" />
    </GridLayout>


</RelativeLayout>